<taglib version="2.1" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema- instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web- jsptaglibrary_2_1.xsd">
	<tlib-version>1.0</tlib-version>
	<short-name>tldPost</short-name>
	<uri>/WEB-INF/tlds/loop</uri>
	<tag>
		<description>takes an attribute and iterates over body post</description>
		<name>simple</name>
		<tag-class>com.customertag.LoopTagHandler</tag-class>
		<body-content> scriptless </body-content>
		<attribute>
			<name>postList</name><!-- the same name in the file LooTagHandler in the method setpostList -->
			<required>true</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
	</tag>
</taglib>